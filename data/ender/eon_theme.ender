namespace "eon_theme" : 0 {
	abstract "widget" {
		double "width";
		double "height";
		double "x";
		double "y";
		object "renderer";
	};

	abstract "container" : "widget" {
		[object] "child";
	};

	abstract "bin" : "container" {
	};

	abstract "button_base" : "bin" {
	};

	abstract "button" : "button_base" {
	};

	abstract "radio" : "button_base" {
	};

	abstract "checkbox" : "button_base" {
	};

	/* controls */
	abstract "control_radio" : "widget" {
	};

	abstract "control_checkbox" : "widget" {
	};

	abstract "control_scroll_thumb" : "widget" {
	};

	abstract "control_scroll_arrow" : "widget" {
	};

	abstract "spin" : "widget" {

	};

	abstract "toggle" : "button_base" {
	};

	abstract "progressbar" : "widget" {
		double "min_width";
		double "max_width";
		double "min_height";
		double "max_height";
		double "preferred_width";
		double "preferred_height";
	};

	abstract "label" : "widget" {
		color "color";
		string "font";
		int "font_size";
	};

	abstract "splitter" : "container" {
		int "orientation";
		object "second content";
	};

	abstract "scrollview" : "container" {

	};

	abstract "image" : "widget" {
		surface "surface";
		double "min_width";
		double "max_width";
		double "min_height";
		double "max_height";
		double "preferred_width";
		double "preferred_height";
	};

	abstract "frame" : "container" {
		string "description";
	};

	abstract "scrollbar" : "widget" {
		int "orientation";
		double "min_width";
		double "max_width";
		double "min_height";
		double "max_height";
		double "preferred_width";
		double "preferred_height";
	};

	abstract "entry" : "widget" {
		string "font";
		int "size";
		int "alignment";
	};

	abstract "color" : "compound" {
	};

};
