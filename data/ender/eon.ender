using enesim;

namespace eon {
	abstract element : renderer {
		uint min_width;
		uint min_height;
		uint max_width;
		uint max_height;
	};

	abstract layout : renderer {
		[ender] child;
	};

	abstract widget : renderer {

	};

	class stack : layout {

	};

	class canvas : layout {
		rel int x;
		rel int y;
	};

	class button : widget {
		string label;
	};

	class radio : widget {
		string label;
	};
};
