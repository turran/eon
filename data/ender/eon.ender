using "enesim";

namespace "eon" {
	abstract "element" : "renderer" {
		double "min_width";
		double "min_height";
		double "max_width";
		double "max_height";
		double "width";
		double "height";
		double "actual_width";
		double "actual_height";
	};

	abstract "layout" : "element" {
		[ender] "child";
	};

	abstract "widget" : "element" {

	};

	class "stack" : "layout" {
		rel int "child_vertical_alignment";
		rel int "child_horizontal_alignment";
		int "direction";
	};

	class "canvas" : "layout" {
		rel double "child_x";
		rel double "child_y";
	};

	abstract "container" : "widget" {
		ender "content";
	};

	class "button" : "container" {
	};

	class "radio" : "container" {
		string "group_name";
		int "selected";
	};

	class "checkbox" : "container" {
	};

	class "scrollview" : "container" {
		double "x_position";
		double "y_position";
	};

	class "progressbar" : "widget" {
		double "progression";
	};

	class "label" : "widget" {
		int "ellipsize";
		string "text";
	};

	class "wrapper" : "element" {
		ender "wrapped";
	};
};

